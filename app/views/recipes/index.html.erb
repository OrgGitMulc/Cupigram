<%= form_with url: scrape_recipes_path, method: :post, local: true do |f| %>
  <div>
    <%= f.label :url, "Enter recipe URL:" %>
    <%= f.text_field :url, placeholder: "https://example.com/recipe" %>
  </div>
  <div>
    <%= f.submit "Scrape Recipe" %>
  </div>
<% end %>

<% if @ingredients.any? %>
  <ul>
    <% @ingredients.each do |ingredient| %>
      <li><%= ingredient %></li>
    <% end %>
  </ul>
<% else %>
  <p>No ingredients found.</p>
<% end %>
