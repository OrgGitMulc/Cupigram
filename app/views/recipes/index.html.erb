<h1>Recipes#index</h1>
<p>Find me in app/views/recipes/index.html.erb</p>

<%= form_with url: scrape_recipes_path, method: :post, local: true do |f| %>
  <div>
    <%= f.label :url, "Enter recipe URL:" %>
    <%= f.text_field :url, placeholder: "https://example.com/recipe" %>
  </div>
  <div>
    <%= f.submit "Scrape Recipe" %>
  </div>
<% end %>

<% if @recipe %>
  <h2>Scraped Recipe</h2>
  <p><strong>Title:</strong> <%= @recipe.title %></p>
  <p><strong>Ingredients:</strong> <%= @recipe.ingredients %></p>
  <p><strong>Instructions:</strong> <%= @recipe.instructions %></p>
<% end %>
