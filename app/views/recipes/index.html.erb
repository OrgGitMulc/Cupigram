<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="<%= root_path %>">Cupigram</a>
    <div>
    <% if session[:user_id] %>
      <%= link_to "View Recipe History", user_path(session[:user_id]) %>
      <%= form_with url: logout_path, method: :delete, local: true do %>
        <%= submit_tag "Logout"%>
      <% end %>

    <% else %>
    <%= link_to "Sign Up", signup_path, class: "btn btn-outline-primary" %>  
    <%= link_to "Login", login_path, class: "btn btn-outline-primary" %>
    <% end %>
    </div>
  </div>
</nav>


<div class="container-fluid">
  <div class="row text-center">
    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col align-self-center">
      <h4 class="text-center">How it works</h4>
        <div class="container">
          <ul class="list-group">
            <li class="list-group-item">Item 1</li>
            <li class="list-group-item">Item 2</li>
          </ul>
          <ul>
            <li>Step 1</li>
          </ul>
        </div>
      </div>
    </div>
  <div class="row text-center">
    <div class="col">
      <%= form_with url: extract_recipes_path, method: :post, local: true do |f| %>
        <%= f.label :url, "Enter recipe URL below:", class: "h4" %>
        <div>
          <%= f.text_field :url, placeholder: "https://example.com/recipe", size: 50 %>
        </div>

        <div>
          <%= f.label :unit, "Convert to:" %><br>
          <%= f.radio_button :unit, "metric" %> <%= f.label :unit, "Metric Units" %> | 
          <%= f.radio_button :unit, "us_customary" %> <%= f.label :unit, "US Customary Units" %>
        </div>
        <div>
          <%= f.submit "Extract Recipe", class: "btn btn-primary" %>
        </div>
      <% end %>
  </div>
  </div>
  <div class="row text-center">
    <div class="col">
    <h4>Carosel here</h4>
    <h4>Works on:</h4>
      <p>https://www.seriouseats.com/</p>
      <p>https://www.allrecipes.com/</p>
      <p>https://www.simplyrecipes.com/</p>
    </div>
  </div>
  </div>
</div>


<% if @ingredients.any? %>
  <h2>Extracted Ingredients</h2>
  <ul>
    <% @ingredients.each do |ingredient| %>
      <li><%= ingredient %></li>
    <% end %>
  </ul>
<% end %>

<% if @parsed_ingredients.any? %>
  <h2>Parsed Ingredients</h2>
  <ul>
    <% @parsed_ingredients.each do |parsed_ingredient| %>
      <li><%= parsed_ingredient %></li>
    <% end %>
  </ul>
<% end %>
