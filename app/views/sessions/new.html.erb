<%# Alert & notice container for msgs to users %>
<div class="container-fluid">
  <div class="row text-center">
    <% if flash[:alert] %>
      <div class="alert alert-danger flash-message">
        <%= flash[:alert] %>
      </div>
    <% elsif flash[:notice] %>
      <div class="alert alert-success flash-message">
        <%= flash[:notice] %>
      </div>
    <% end %>
  </div>
</div>

<div class="container-fluid bg-light bg-opacity-50">
  <div class="row mt-5">
    
    <div class="col">
    </div>
    <div class="col text-center">
      <h1>Login</h1>
      <%= form_with url: login_path, local: true do |form| %>
        <div class="mb-3">
          <%= form.label :email, "Email address", class: "form-label" %>
          <%= form.email_field :email, class: "form-control", id: "exampleFormControlInput1", placeholder: "name@example.com", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :password, "Password", class: "form-label" %>
          <%= form.password_field :password, class: "form-control", id: "exampleFormControlTextarea1", required: true %>
        </div>

        <div class="mb-3">
          <%= form.submit "Login", class: "btn p-btn btn-light" %>
        </div>
      <% end %>
    </div>
    <div class="col">
    </div>
  </div>
</div>
